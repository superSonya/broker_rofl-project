<Page x:Class="UP.EditManagerPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditManagerPanel">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" x:Name="editstack">
            <ComboBox x:Name="broker_combo" Width="220"  Height="30" DisplayMemberPath="ID"/>
            <ComboBox  x:Name="subject_combo" Width="220"  Height="30" DisplayMemberPath="Name"/>
            <TextBox x:Name="price" Width="220" Height="30"/>
            <Button Content="Change" Width="220" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
